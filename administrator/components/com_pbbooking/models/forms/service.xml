<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>

        <field name="id" type="hidden" />
        <field name="name" type="text" required="1" class="input-xxlarge" label="COM_PBBOOKING_SERVICE_NAME" label-class="control-label" />
        <field name="duration" type="text" required="1" class="input-mini" label="COM_PBBOOKING_SERVICE_DURATION" label-class="control-label"/>
        <field name="price" type="text" class="input-mini" label="COM_PBBOOKING_SERVICE_PRICE" label-class="control-label"/>

        <field name="calendar" type="list" required="1" label="COM_PBBOOKING_SERVICE_LINKED_CALENDAR" multiple="true">
        </field>
        <field name="require_payment" type="list" required="1" label="COM_PBBOOKING_SERVICE_REQUIRE_PAYMENT">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="is_variable" type="list" label="COM_PBBOOKING_SERVICE_IS_VARIABLE_DURATION">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="min_duration" type="text" class="input-mini" label="COM_PBBOOKING_SERVICE_MIN_DURATION"></field>

        <field name="ordering" type="text" class="input-mini" label-class="control-label" label="COM_PBBOOKING_CAL_ORDERING" default="0" required="1"/>                  

    </fields>


</form>
