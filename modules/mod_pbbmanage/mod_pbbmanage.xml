<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="3.1.0"
    client="site"
    method="upgrade">
    <name>mod_pbbmanage</name>
    <author>Eric Fernance</author>
    <creationDate>15th October 2014</creationDate>
    <copyright>Copyright (C) 2005 - 2014 Eric Fernance. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>beanie@purplebeanie.com</authorEmail>
    <authorUrl>purplebeanie.com</authorUrl>
    <version>3.0.4</version>
    <description>MOD_PBBMANAGE_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_pbbmanage">mod_pbbmanage.php</filename>
        <folder>tmpl</folder>
        <filename>index.html</filename>
        <filename>mod_pbbmanage.xml</filename>
        <filename>helper.php</filename>
    </files>
    <media folder="media" destination="mod_pbbmanage">
        <filename>index.html</filename>
        <folder>templates</folder>
        <folder>js</folder>
    </media>
    <languages>
        <language tag="en-GB">en-GB.mod_pbbmanage.ini</language>
        <language tag="en-GB">en-GB.mod_pbbmanage.sys.ini</language>
    </languages>
    <scriptfile>script.php</scriptfile>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="readonly" type="list" label="MOD_PBBMANAGE_READONLY_MODE">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>

            <fieldset
                name="advanced">

                <field
                    name="cache"
                    type="hidden"
                    default="0"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

            </fieldset>


        </fields>
    </config>
</extension>
